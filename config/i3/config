set $mod Mod4

default_border pixel 1
default_floating_border normal
smart_borders on

font pango:Sarasa Mono SC 11

floating_modifier $mod

# kill focused window
bindsym $mod+Shift+q kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# resizing window
bindsym $mod+Ctrl+h resize shrink width 10 px
bindsym $mod+Ctrl+l resize grow width 10 px
bindsym $mod+Ctrl+j resize shrink height 10 px
bindsym $mod+Ctrl+k resize grow height 10 px

bindsym $mod+comma split h
bindsym $mod+semicolon split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

set $Locker i3lock-fancy && sleep 1
set $mode_system System (l) lock, (e) logout, (r) reboot, (s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+e mode "$mode_system"

set_from_resource $color0      i3wm.color0      #1e1e1e
set_from_resource $color1      i3wm.color1      #f44747
set_from_resource $color2      i3wm.color2      #608b4e
set_from_resource $color3      i3wm.color3      #dcdcaa
set_from_resource $color4      i3wm.color4      #569cd6
set_from_resource $color5      i3wm.color5      #c678dd
set_from_resource $color6      i3wm.color6      #56b6c2
set_from_resource $color7      i3wm.color7      #d4d4d4
set_from_resource $color8      i3wm.color8      #808080
set_from_resource $color9      i3wm.color9      #f44747
set_from_resource $color10     i3wm.color10     #608b4e
set_from_resource $color11     i3wm.color11     #dcdcaa
set_from_resource $color12     i3wm.color12     #569cd6
set_from_resource $color13     i3wm.color13     #c678dd
set_from_resource $color14     i3wm.color14     #56b6c2
set_from_resource $color15     i3wm.color15     #d4d4d4
set_from_resource $foreground  i3wm.foreground  #d4d4d4
set_from_resource $background  i3wm.background  #1e1e1e
set_from_resource $cursorColor i3wm.cursorColor #d4d4d4

# class, border, bg, text, indicator, child border
client.focused           $color6 $color6 $color0 $color6 $color6
client.focused_inactive  $color8 $color8 $color0 $color8 $color8
client.unfocused         $color8 $color0 $color8 $color8 $color8
client.focused_tab_title $color6 $color0 $color6
client.urgent            $color3 $color0 $color3 $color8 $color8
client.placeholder       $color6 $color0 $color6 $color6 $color8

client.background $color6

bar {
    status_command i3status-rs
    font pango:Sarasa Mono SC 11
    separator_symbol "|"
    colors {
        background         $background
        statusline         $color8
        separator          $color8
        focused_workspace  $color6  $color6  $color0
        active_workspace   $color15 $color15 $color0
        inactive_workspace $color0  $color0  $color15
        urgent_workspace   $color3  $color3  $color0
        binding_mode       $color6  $color6  $color0
    }
}

# gaps
gaps inner 6
gaps outer -2
smart_gaps on

# Startup apps
exec --no-startup-id bash /home/mackong/.config/i3/startup.sh

# Shortcuts
bindsym Print --release exec flameshot gui
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+d exec "rofi -show drun"
